<Window x:Class="BomberBetaClient.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection" Height="168" Width="264" ResizeMode="NoResize">
    <Grid>
        <Label Content="Login :" Height="23" HorizontalAlignment="Left" Margin="12,17,0,0" Name="label1" VerticalAlignment="Top" Width="70" />
        <Label Content="Password :" Height="23" HorizontalAlignment="Left" Margin="12,49,0,0" Name="label2" VerticalAlignment="Top" Width="70" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="88,17,0,0" Name="_login" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="88,49,0,0" Name="_password" VerticalAlignment="Top" Width="120" />
        <Button Content="Connect" Height="23" HorizontalAlignment="Left" Margin="110,94,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="OnConnect" />
    </Grid>
</Window>
